<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="staff_form_view" model="ir.ui.view">
        <field name="name">StaffDetails</field>
        <field name="model">staff.table.staff</field>
        <field name="arch" type="xml">
                <form>
                    <sheet>
                            <group>
                                 <field name="name" />
                                <field name="gender" />
                                <field name="address" />
                                <field name="phone" />
                            </group>
                    </sheet>>
                </form>
        </field>
    </record>


    <record id="staff_tree_view" model="ir.ui.view">
        <field name="name">Staff Details</field>
        <field name="model">staff.table.staff</field>
        <field name="arch" type="xml">
                <tree>

                    <field name="name" />
                    <field name="gender" />
                    <field name="address" />
                    <field name="phone" />


                </tree>
        </field>
    </record>

    <record id="staff_action" model="ir.actions.act_window">

        <field name="name">StaffDetaills</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">staff.table.staff</field>
        <field name="view_mode">form,tree</field>
        <field name="help" type="html">
            <p> Staff Details...</p>
        </field>
    </record>
    <menuitem name="staff" id="staff_item_menu"/>
    <menuitem name="Details" id="menu_item_details" parent="staff_item_menu" action="staff_action"/>
</odoo>